    home: "Добре дошли във V.A. Trans Benelux",
    slogan: "Надежден. Бърз. Клиентски ориентиран транспорт в цяла Европа.",
    about: "V.A. Trans Benelux е европейска транспортна фирма, фокусирана върху качество, скорост и лично обслужване. Предлагаме превоз на мебели, експресни доставки и логистични решения в Белгия, Нидерландия, Германия, Полша и други.",
    services: ["Международен транспорт на мебели", "Експресни доставки в ЕС", "Дистрибуция и логистика", "Надеждна услуга с проследяване"],
    contact: "Контакт"
  }
};

// Navigatie
document.querySelectorAll("nav a").forEach(link => {
  link.addEventListener("click", e => {
    e.preventDefault();
    const target = link.dataset.section;
    document.querySelectorAll(".content-section").forEach(sec => sec.classList.remove("active"));
    document.getElementById(target).classList.add("active");
  });
});

// Taalwissel
const buttons = document.querySelectorAll(".lang-switch button");
buttons.forEach(btn => {
  btn.addEventListener("click", () => {
    buttons.forEach(b => b.classList.remove("active"));
    btn.classList.add("active");
    const lang = btn.dataset.lang;
    applyLanguage(lang);
  });
});

function applyLanguage(lang) {
  const t = translations[lang];
  document.querySelector("#home h1").textContent = t.home;
  document.querySelector(".slogan").textContent = t.slogan;
  document.querySelector("#about p").textContent = t.about;

  const ul = document.querySelector("#services ul");
  ul.innerHTML = "";
  t.services.forEach(s => {
    const li = document.createElement("li");
    li.textContent = s;
    ul.appendChild(li);
  });

  document.querySelector("#contact h2").textContent = t.contact;
}
